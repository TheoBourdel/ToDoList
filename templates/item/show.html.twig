<!DOCTYPE html>

<title>Item</title>

{% block body %}
    <h1>Item</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ item.content }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ item.creationDate ? item.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('front_app_item_index') }}">back to list</a>

    <a href="{{ path('front_app_item_edit', {'id': item.id}) }}">edit</a>

    {{ include('item/_delete_form.html.twig') }}
{% endblock %}
